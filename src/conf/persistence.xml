<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="systmPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.com.travelamte.model.Agenda</class>
    <class>br.com.travelamte.model.Avisos</class>
    <class>br.com.travelamte.model.Avisousuario</class>
    <class>br.com.travelamte.model.Cliente</class>
    <class>br.com.travelamte.model.Lead</class>
    <class>br.com.travelamte.model.Leadcontrole</class>
    <class>br.com.travelamte.model.Leadhistorico</class>
    <class>br.com.travelamte.model.Leadresponsavel</class>
    <class>br.com.travelamte.model.Unidadenegocio</class>
    <class>br.com.travelamte.model.Usuario</class>
    <class>br.com.travelamte.model.Pais</class>
    <class>br.com.travelamte.model.Publicidade</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <validation-mode>NONE</validation-mode>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:8081/systm?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
    </properties>
  </persistence-unit>
</persistence>
